{
  "name": "Zephyr Development Environment for Espressif",
  "image": "env-zephyr-espressif:latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "nordic-semiconductor.nrf-devicetree",
        "ms-vscode.hexeditor"
      ]
    }
  },
  "forwardPorts": [],
  "workspaceMount": "source=zephyr-dev-volume,target=/project,type=volume",
  "workspaceFolder": "/project/introduction-to-zephyr_dev_container/workspace",
  
  // "postStartCommand": "code --file-uri /zephyr.code-workspace", // Does not work
  "runArgs": [
    "--name",
    "Zephyr-Introduction",
    "--rm",
    "-it",
    "-p",
    "2222:22",
    "-p",
    "3333:3333",
    "-p",
    "8800:8800"
  ],
  "remoteUser": "root"
}
